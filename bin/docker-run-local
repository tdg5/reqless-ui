#!/bin/bash

set -eo pipefail

# From https://stackoverflow.com/a/4774063
REPO_DIR="$( cd -- "$(dirname "$0")/.." >/dev/null 2>&1 ; pwd -P )"

if [ -z "$TAG" ]; then
  TAG="latest"
fi

docker run \
  --env "REQLESS_UI_GIT_REF=$(git rev-parse HEAD)" \
  --env "REQLESS_UI_VERSION=0.0.1" \
  --env "REQLESS_UI_HOST=${REQLESS_UI_HOST:-localhost}" \
  --env "REQLESS_REDIS_URL=${REQLESS_REDIS_URL:-redis://localhost:6379/0}" \
  --interactive \
  --network host \
  --rm \
  --tty \
  "reqless-ui:$TAG"
